<% title @study_invite.name %>
<% back_link "Back to Study", admin_study_path(@study_invite.study) %>

<div class="space-y-4">
  <div>
    <%= link_to "New Text Field", new_admin_study_study_invite_survey_question_path(@study_invite.study, @study_invite, content: 'text'), class: 'oba-btn' %>
    <%= link_to "New Label", new_admin_study_study_invite_survey_question_path(@study_invite.study, @study_invite, content: 'label'), class: 'oba-btn' %>
    <%= link_to "New Radio List", new_admin_study_study_invite_survey_question_path(@study_invite.study, @study_invite, content: 'radio'), class: 'oba-btn' %>
    <%= link_to "New Checkbox List", new_admin_study_study_invite_survey_question_path(@study_invite.study, @study_invite, content: 'checkbox'), class: 'oba-btn' %>
  </div>

  <% if @study_invite.survey_questions.blank? %>
    <%= render Containers::EmptyStateComponent.new(
      title: "No Survey Questions",
      description: "Add survey questions to this study invite to collect data from participants."
    ) %>
  <% else %>
    <div>
      <% @study_invite.survey_questions.each do |sq| %>
        <div class="border bg-slate-50 p-2">
          <h3 class="h3"><%= sq.content.type.titleize %></h3>
          <pre><code>
            <%= sq.content.to_json.strip %>
          </code></pre>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
